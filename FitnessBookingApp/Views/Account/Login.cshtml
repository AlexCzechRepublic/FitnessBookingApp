@model FitnessBookingApp.Models.User
@{
    ViewData["Title"] = "Přihlášení";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="card shadow-lg">
            <div class="card-body">
                <h2 class="card-title mb-3 text-center">Přihlášení</h2>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                }

                <form asp-action="Login" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Uživatel</label>
                        <input asp-for="Username" class="form-control" autocomplete="username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Heslo</label>
                        <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Přihlásit</button>
                </form>

                <p class="mt-3 text-center">
                    Nemáte ještě účet?
                    <a asp-action="Register" asp-controller="Account" class="link-primary">Zaregistrujte se zde</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}