@model IEnumerable<FitnessBookingApp.Models.Training>
@{
    ViewBag.Title = "Admin – Přehled tréninků";
    var username = Context.Session.GetString("User");
}

<h2>Přehled tréninků</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Datum a čas</th>
            <th>Délka</th>
            <th>Přihlášeno</th>
            <th>Akce</th>
            <th>Admin Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var training in Model)
        {
            <tr>
                <td>@training.Date.ToString("dddd dd.MM.yyyy HH:mm")</td>
                <td>60 minut</td>
                <td>@training.TrainingRegistrations.Count / @training.Capacity</td>
                <td>
                    <button type="button"
                            class="btn btn-info"
                            data-bs-toggle="modal"
                            data-bs-target="#attendees-@training.Id">
                        Zobrazit účastníky
                    </button>
                </td>
                <td>
                    <form asp-controller="Training" asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@training.Id" />
                        <button type="submit" class="btn btn-danger">Smazat</button>
                    </form>
                    <form asp-controller="Home" asp-action="Edit" method="get" style="display:inline">
                        <input type="hidden" name="id" value="@training.Id" />
                        <button type="submit" class="btn btn-secondary">Upravit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@* Modals for attendees + odhlášení *@
@foreach (var training in Model)
{
    <div class="modal fade" id="attendees-@training.Id" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Účastníci – @training.Date.ToString("dd.MM.yyyy HH:mm")
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
                </div>
                <div class="modal-body">
                    @if (training.TrainingRegistrations.Any())
                    {
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Jméno</th>
                                    <th>Email</th>
                                    <th>Telefon</th>
                                    <th>Akce</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tr in training.TrainingRegistrations.OrderBy(tr => tr.User.LastName).ThenBy(tr => tr.User.FirstName))
                                {
                                    var fullName = string.IsNullOrWhiteSpace(tr.User.FirstName) && string.IsNullOrWhiteSpace(tr.User.LastName)
                                    ? tr.User.Username
                                    : $"{tr.User.FirstName} {tr.User.LastName}".Trim();
                                    <tr>
                                        <td>@fullName</td>
                                        <td>@tr.User.Email</td>
                                        <td>@tr.User.PhoneNumber</td>
                                        <td>
                                            <form asp-controller="Admin" asp-action="UnregisterUser" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@tr.User.Id" />
                                                <input type="hidden" name="trainingId" value="@training.Id" />
                                                <button type="submit" class="btn btn-warning btn-sm">Odhlásit</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Nikdo není přihlášen.</p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zavřít</button>
                </div>
            </div>
        </div>
    </div>
}